<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ConfirmarReservaPistaActivity"
    android:background="@drawable/background1">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:padding="10dp"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="5dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/padel"
                android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_tipoDeporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#30000000"
                android:paddingLeft="10dp"
                android:paddingBottom="20dp"
                android:text="@string/padel"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_diaLetra_reseva"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#30000000"
                    android:drawableLeft="@drawable/reloj"
                    android:drawablePadding="20dp"
                    android:text="Sab."
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_diaNum_reserva"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#30000000"
                    android:text="08"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_horarioLetra_reserva"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#30000000"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Horario:"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_horario_reserva"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#30000000"
                    android:text="9:00 - 10:30"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_pista_reserva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#30000000"
                android:drawableLeft="@drawable/pelota"
                android:drawablePadding="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Pista"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_precio_reserva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#30000000"
                android:drawableLeft="@drawable/dinero"
                android:drawablePadding="20dp"
                android:text="Precio"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:paddingTop="10dp" android:paddingEnd="20dp"
        android:paddingStart="20dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btn_confirmar_reserva"
                android:background="@color/white"
                android:text="@string/confirmarReserva"
                android:textColor="@color/colorPrimary"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>